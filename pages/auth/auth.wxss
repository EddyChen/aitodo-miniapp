/* pages/auth/auth.wxss */
.container {
  min-height: 100vh;
  padding: 80rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.app-header {
  text-align: center;
  margin-bottom: 80rpx;
}

.app-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.app-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}

.app-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 40rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 20rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.welcome-text {
  font-size: 28rpx;
  color: #666;
}

.auth-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  width: 100%;
  max-width: 500rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.auth-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.auth-btn {
  width: 100%;
  font-size: 32rpx;
  font-weight: bold;
  transition: all 0.3s ease;
  text-align: center;
}

.auth-btn.loading {
  opacity: 0.7;
}

.features {
  display: flex;
  justify-content: space-around;
  width: 100%;
  max-width: 500rpx;
  margin-top: 60rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  flex: 1;
  margin: 0 10rpx;
}

.feature-icon {
  font-size: 40rpx;
  margin-bottom: 12rpx;
}

.feature-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
}

.loading-hint {
  margin-top: 40rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
}

.loading-hint text {
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
} 