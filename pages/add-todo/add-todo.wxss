/* pages/add-todo/add-todo.wxss */
page {
  background-color: #f8fafc;
}

.add-todo-container {
  min-height: 100vh;
  padding-bottom: 120rpx; /* 为底部操作栏留空间 */
}

/* 顶部模式切换 */
.mode-tabs {
  display: flex;
  background: #ffffff;
  margin: 16rpx;
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 16rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.tab-item.active {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: #ffffff;
}

.tab-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.tab-text {
  font-size: 24rpx;
  font-weight: 500;
}

.tab-item.active .tab-text {
  color: #ffffff;
}

/* 表单区域 */
.form-section {
  background: #ffffff;
  margin: 16rpx;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.section-subtitle {
  font-size: 28rpx;
  color: #64748b;
  margin-bottom: 32rpx;
  line-height: 1.5;
}

/* 表单组件 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.required {
  color: #ef4444;
  margin-left: 4rpx;
}

.form-input {
  width: 100%;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #1e293b;
  background-color: #ffffff;
  transition: border-color 0.3s ease;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #6366f1;
  box-shadow: 0 0 0 6rpx rgba(99, 102, 241, 0.1);
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #1e293b;
  background-color: #ffffff;
  transition: border-color 0.3s ease;
  resize: none;
  box-sizing: border-box;
}

.form-textarea:focus {
  border-color: #6366f1;
  box-shadow: 0 0 0 6rpx rgba(99, 102, 241, 0.1);
}

/* 选择器 */
.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  background-color: #ffffff;
  transition: border-color 0.3s ease;
}

.picker-text {
  font-size: 32rpx;
  color: #1e293b;
}

.picker-icon {
  font-size: 32rpx;
  color: #64748b;
}

/* 优先级选择 */
.priority-options {
  display: flex;
  gap: 16rpx;
}

.priority-item {
  flex: 1;
  padding: 20rpx 16rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  text-align: center;
  background-color: #ffffff;
  transition: all 0.3s ease;
  cursor: pointer;
}

.priority-item.selected {
  border-color: #6366f1;
  background-color: #6366f1;
  color: #ffffff;
}

.priority-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 标签容器 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag-item {
  padding: 12rpx 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #64748b;
  background-color: #ffffff;
  transition: all 0.3s ease;
  cursor: pointer;
}

.tag-item.selected {
  border-color: #6366f1;
  background-color: #6366f1;
  color: #ffffff;
}

.tag-item.add-tag {
  border-style: dashed;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 80rpx;
}

.add-icon {
  font-size: 32rpx;
  color: #6366f1;
}

/* 提醒设置 */
.reminder-container {
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 24rpx 20rpx;
  background-color: #ffffff;
}

.reminder-toggle {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.reminder-text {
  font-size: 28rpx;
  color: #374151;
}

.reminder-methods {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.method-item {
  padding: 12rpx 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #64748b;
  background-color: #f8fafc;
  transition: all 0.3s ease;
  cursor: pointer;
}

.method-item.selected {
  border-color: #6366f1;
  background-color: #6366f1;
  color: #ffffff;
}

/* AI文字分析模式 */
.ai-text-mode {
  margin-top: 16rpx;
}

.ai-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #1e293b;
  background-color: #ffffff;
  transition: border-color 0.3s ease;
  resize: none;
  box-sizing: border-box;
}

.ai-textarea:focus {
  border-color: #6366f1;
  box-shadow: 0 0 0 6rpx rgba(99, 102, 241, 0.1);
}

.ai-actions {
  text-align: center;
  margin: 24rpx 0;
}

.ai-analyze-btn {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
  transition: all 0.3s ease;
}

.ai-analyze-btn::after {
  border: none;
}

.ai-analyze-btn:not([disabled]):active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(99, 102, 241, 0.4);
}

.ai-analyze-btn[disabled] {
  opacity: 0.5;
  transform: none;
  box-shadow: none;
  background: #94a3b8;
}

/* 图片识别模式 */
.ai-image-mode {
  margin-top: 16rpx;
}

.image-section {
  margin: 24rpx 0;
}

.image-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  border: 4rpx dashed #cbd5e1;
  border-radius: 16rpx;
  background-color: #f8fafc;
  cursor: pointer;
  transition: all 0.3s ease;
}

.image-placeholder:active {
  background-color: #f1f5f9;
  border-color: #6366f1;
}

.placeholder-icon {
  font-size: 80rpx;
  color: #94a3b8;
  margin-bottom: 16rpx;
}

.placeholder-text {
  font-size: 28rpx;
  color: #64748b;
}

.image-preview {
  text-align: center;
}

.preview-image {
  width: 100%;
  max-height: 400rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.image-actions {
  display: flex;
  gap: 16rpx;
  justify-content: center;
}

.image-btn {
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
}

.image-btn:not(.secondary) {
  background-color: #6366f1;
  color: #ffffff;
}

.image-btn.secondary {
  background-color: #f1f5f9;
  color: #64748b;
  border: 2rpx solid #e2e8f0;
}

.image-btn::after {
  border: none;
}



/* 表单预览 */
.form-preview {
  background: #ffffff;
  margin: 16rpx;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}



.preview-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 24rpx;
}

.preview-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.preview-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx;
  background-color: #f8fafc;
  border-radius: 12rpx;
}

.preview-label {
  font-size: 28rpx;
  color: #64748b;
  font-weight: 500;
  min-width: 100rpx;
}

.preview-value {
  font-size: 28rpx;
  color: #1e293b;
  flex: 1;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 16rpx;
  background: #ffffff;
  border-top: 2rpx solid #f1f5f9;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.multi-todo-actions {
  display: flex;
  gap: 16rpx;
}

.single-todo-actions {
  display: flex;
}

.full-width {
  width: 100%;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.action-btn::after {
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
}

.action-btn.secondary {
  background-color: #f1f5f9;
  color: #64748b;
  border: 2rpx solid #e2e8f0;
}

.action-btn[disabled] {
  opacity: 0.5;
  transform: none;
  box-shadow: none;
}

.action-btn:not([disabled]):active {
  transform: scale(0.98);
}

/* 加载遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #ffffff;
  font-size: 28rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .form-section {
    margin: 8rpx;
    padding: 24rpx;
  }
  
  .mode-tabs {
    margin: 8rpx;
  }
  
  .tab-text {
    font-size: 20rpx;
  }
  
  .priority-options {
    gap: 8rpx;
  }
  
  .priority-item {
    padding: 16rpx 12rpx;
  }
  
  .tags-container {
    gap: 8rpx;
  }
  
  .tag-item {
    padding: 8rpx 16rpx;
    font-size: 22rpx;
  }
}

/* 动画效果 */
.form-section {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
} 