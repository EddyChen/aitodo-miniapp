/**app.wxss**/
/* 全局样式重置 */
.container {
  min-height: 100vh;
  background-color: #f8fafc;
}

page {
  background-color: #f8fafc;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

/* 通用组件样式 */
.btn {
  border-radius: 12rpx;
  font-size: 32rpx;
  padding: 24rpx 48rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  border: none;
  box-sizing: border-box;
}

.btn-primary {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
}

.btn-primary:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(99, 102, 241, 0.4);
}

.btn-secondary {
  background-color: #e5e7eb;
  color: #374151;
}

.btn-secondary:hover {
  background-color: #d1d5db;
}

.btn-ghost {
  background-color: transparent;
  color: #6366f1;
  border: 2rpx solid #6366f1;
}

.btn-ghost:hover {
  background-color: #6366f1;
  color: white;
}

.btn-danger {
  background-color: #ef4444;
  color: white;
}

.btn-danger:hover {
  background-color: #dc2626;
}

.btn-small {
  padding: 16rpx 32rpx;
  font-size: 28rpx;
}

.btn-large {
  padding: 32rpx 64rpx;
  font-size: 36rpx;
}

.btn-block {
  width: 100%;
  display: block;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  padding: 32rpx;
  margin: 16rpx;
}

.card-header {
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f3f4f6;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111827;
  margin: 0;
}

.card-subtitle {
  font-size: 28rpx;
  color: #6b7280;
  margin: 8rpx 0 0 0;
}

/* 表单样式 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 12rpx;
  display: block;
}

.form-control {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 32rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.form-control:focus {
  border-color: #6366f1;
  outline: none;
  box-shadow: 0 0 0 6rpx rgba(99, 102, 241, 0.1);
}

.form-control.error {
  border-color: #ef4444;
}

.form-error {
  color: #ef4444;
  font-size: 24rpx;
  margin-top: 8rpx;
}

.form-helper {
  color: #6b7280;
  font-size: 24rpx;
  margin-top: 8rpx;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  margin: 4rpx;
}

.tag-primary {
  background-color: #dbeafe;
  color: #1e40af;
}

.tag-success {
  background-color: #dcfce7;
  color: #166534;
}

.tag-warning {
  background-color: #fef3c7;
  color: #92400e;
}

.tag-danger {
  background-color: #fee2e2;
  color: #991b1b;
}

.tag-info {
  background-color: #e0f2fe;
  color: #0c4a6e;
}

